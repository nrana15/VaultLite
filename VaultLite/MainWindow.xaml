<Window x:Class="VaultLite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VaultLite" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        MinHeight="500" MinWidth="800">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel: Tags -->
        <Border Grid.Column="0" Background="#FFFFFF" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
            <DockPanel>
                <TextBlock Text="TAGS" FontSize="12" FontWeight="Bold" 
                           Foreground="#666666" Margin="15,15,15,10"/>
                
                <TextBox x:Name="txtNewTag" 
                         Height="30" Margin="15,0,15,10"
                         Background="#FAFAFA" BorderBrush="#DDDDDD" BorderThickness="1"
                         FontSize="12"/>
                
                <ListBox x:Name="lstTags" SelectionChanged="OnTagSelectionChanged"
                         Background="#FFFFFF" BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontSize="13" Foreground="#333333"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- Center Panel: Notes List -->
        <Grid Grid.Column="1" Margin="0,0,5,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="#FFFFFF" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="0,0,5,5">
                <DockPanel>
                    <TextBlock Text="NOTES" FontSize="12" FontWeight="Bold" 
                               Foreground="#666666" Margin="15,15,15,10"/>
                    
                    <Grid Margin="15,0,15,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="txtSearch" KeyDown="OnSearchKeyDown"
                                 Height="30" Grid.Column="0"
                                 Background="#FAFAFA" BorderBrush="#DDDDDD" BorderThickness="1"
                                 FontSize="12" Padding="8,0"/>
                        
                        <Button x:Name="btnNewNote" Content="+ New" 
                                Grid.Column="1" Margin="10,0,0,0" Width="70" Height="30"
                                Background="#4A90D9" Foreground="White" BorderThickness="0"
                                 FontSize="12"/>
                    </Grid>

                    <ListBox x:Name="lstNotes" SelectionChanged="OnNoteSelectionChanged"
                             Background="#FFFFFF" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="12,8" Margin="5" Background="Transparent">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Text="{Binding Title}" FontSize="13" 
                                                   FontWeight="SemiBold" Foreground="#222222"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <StackPanel Grid.Row="1" Margin="0,4,0,0">
                                            <TextBlock Text="{Binding Content, StringFormat={}{0:â€¦}}" FontSize="11" 
                                                       Foreground="#777777" MaxWidth="280"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Right Panel: Editor -->
        <Border Grid.Column="2" Background="#FFFFFF" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
            <DockPanel>
                <TextBlock Text="EDITOR" FontSize="12" FontWeight="Bold" 
                           Foreground="#666666" Margin="15,15,15,10"/>

                <TextBox x:Name="txtNoteTitle" KeyDown="OnNoteTitleKeyDown"
                         Height="35" Margin="15,0,15,8" Padding="10,0"
                         FontSize="16" FontWeight="SemiBold" BorderBrush="#DDDDDD" BorderThickness="1"
                         Background="#FAFAFA"/>

                <Border Margin="15,0,15,8" Height="35">
                    <Grid>
                        <TextBox x:Name="txtTagsInput" KeyDown="OnTagsKeyDown"
                                 FontSize="12" Padding="8,6"
                                 Background="#FAFAFA" BorderBrush="#DDDDDD" BorderThickness="1"/>
                        
                        <!-- Watermark placeholder -->
                        <TextBlock Text="Add tags (comma separated)" 
                                   Foreground="#AAAAAA" FontSize="11"
                                   VerticalAlignment="Center" HorizontalAlignment="Left" Margin="8,0,0,0"
                                   x:Name="lblTagsWatermark"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5,0">
                            <Button x:Name="btnPin" Content="Pin" Width="60" Height="28"
                                    Click="OnPinClicked" FontSize="11" Background="#E8E8E8"/>
                            <Button x:Name="btnArchive" Content="Archive" Width="75" Height="28"
                                    Click="OnArchiveClicked" FontSize="11" Background="#E8E8E8" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <TextBox x:Name="txtNoteContent" TextChanged="OnNoteTextChanged"
                         AcceptsReturn="True" AcceptsTab="True"
                         FontFamily="Consolas, 'Courier New', monospace" 
                         FontSize="13" Padding="15"
                         BorderBrush="#DDDDDD" BorderThickness="1"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Visible"/>

                <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Right" Margin="0,10,15,0"
                        Width="80" Height="30" Click="OnDeleteClicked" 
                        Background="#E74C3C" Foreground="White" BorderThickness="0"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>
